@using FreeRiders.Web.Areas.Administration.ViewModels;﻿

@model ICollection<InputAlbumCategoryModel>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @foreach (var category in Model)
            {
                <div class="row">
                    <div class="col-md-10">
                        <h3>@category.Name</h3>
                    </div>
                    <div class="col-md-2">
                        @Html.ActionLink("Delete", "Delete", new { name = category.Name })
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6">
            @using (Html.BeginForm("Create", "AlbumCategory", FormMethod.Post))
            {
                <div class="form-horizontal">
                    <h3>Create Album Category</h3>
                    <br />
                    <div class="form-group">
                        <div>
                            <input type="text" name="Name" id="Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <input type="submit" value="Create" id="submitBtn" class="btn btn-success" />
                            <input type="reset" value="Reset" id="resetBtn" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
