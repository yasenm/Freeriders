@model ICollection<FreeRiders.Web.Areas.Administration.ViewModels.AdminAlbumModel>

@{
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
    const string ControllerName = "Album";
}

<br />
<br />
<br />
<div class="container">
    @foreach (var album in Model)
    {
        <div class="row">
            <div class="col-md-4">
                <img src="@album.Picture.ImageUrl" alt="No picture found..." style="width:100%;" />
            </div>
            <div class="col-md-8">
                <h4>@album.Title</h4>
                <p class="description-container subheading">
                    @if (album.Description.Length < 300)
                    {
                        @album.Description
                    }
                    else
                    {
                        @album.Description.Substring(0, 300)
                    }
                </p>
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        @Html.ActionLink("Edit", "Edit", "Album", new { area = "Administration", id = album.ID }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("AlbumDetails", "AlbumDetails", "Albums", new { area = string.Empty, id = album.ID }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Delete", "DeleteAlbum", "Albums", new { area = string.Empty, id = album.ID }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
