@model FreeRiders.Web.Areas.Administration.ViewModels.AlbumDetailsModel

<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="jumbotron">
            <div class="row">
                <div class="col-md-4">
                    <img src="@Model.Picture.ImageUrl" alt="No picture found..." class="image-in-container" />
                </div>
                <div class="col-md-8">
                    <h1>@Model.Title</h1>
                    <h4>@Model.Location.Name</h4>
                    <h4>@Model.Category.Name</h4>
                    <p>
                        @Model.Description
                    </p>
                </div>
            </div>
            <div class="row">
                @foreach (var picure in Model.Pictures)
                {
                    <div class="col-md-1">
                        <a href="@picure.ImageUrl" target="_blank">
                            <img src="@picure.ImageUrl" alt="No picture found here..." class="image-in-container" />
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
