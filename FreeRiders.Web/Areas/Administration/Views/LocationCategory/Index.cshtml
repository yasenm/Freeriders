@model ICollection<FreeRiders.Models.LocationCategory>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @foreach (var category in Model)
            {
                <h3>@category.Name</h3>
            }
        </div>
        <div class="col-md-6">
            @using (Html.BeginForm("Create", "LocationCategory", FormMethod.Post))
            {
                <div class="form-horizontal">
                    <h3>Create Location Category</h3>
                    <br />
                    <div class="form-group">
                        <div>
                            <input type="text" name="Name" id="Name" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <input type="submit" value="Create" id="submitBtn" class="btn btn-default" />
                            <input type="reset" value="Reset" id="resetBtn" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
