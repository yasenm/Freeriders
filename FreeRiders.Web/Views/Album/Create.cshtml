@using FreeRiders.Web.ViewModels.Album

@model AlbumCreateViewModel

<div class="container">
    @using (Html.BeginForm("Create", "Album", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h3>Create Album</h3>
            <br />
            <div class="form-group">
                <div>
                    @Html.LabelFor(album => album.Title)
                    @Html.TextBoxFor(album => album.Title, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label for="PicturePosted">Chose cover</label>
                    <input type="file" name="PicturePosted" id="PicturePosted" class="btn btn-default" />
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label for="PicturesPosted">Enter multiple pictures</label>
                    <input type="file" multiple name="PicturesPosted" id="PicturesPosted" class="btn btn-default" />
                </div>
            </div>
            <div class="form-group">
                <div>
                    @Html.LabelFor(album => album.Description)
                    @Html.TextAreaFor(album => album.Description, new { @class = "form-control location-desctioption-text-area" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label for="category-input">Category for the album</label>
                    @Html.DropDownListFor(album => album.CategoryID, (SelectList)ViewBag.Categories, new { id = "category-input", @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label for="category-input">Location from which is the album</label>
                    @Html.DropDownListFor(album => album.LocationID, (SelectList)ViewBag.Locations, new { id = "category-input", @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" value="Create" id="submitBtn" class="btn btn-success" />
                    <input type="reset" value="Reset" id="resetBtn" class="btn btn-danger" />
                </div>
            </div>
        </div>
    }
</div>
